{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"postTypes": [ "page", "post" ],
			"title": "Blank"
		},
		{
			"name": "page-has-title",
			"postTypes": [ "page" ],
			"title": "Page (Has Title)"
		}
	],
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": [
				{
					"colors": [ "#0F172A", "#F9FAFB" ],
					"slug": "primary-and-neutral",
					"name": "Primary and Neutral"
				},
				{
					"colors": [ "#F9FAFB", "#0F172A" ],
					"slug": "neutral-and-primary",
					"name": "Neutral and Primary"
				},
				{
					"colors": [ "#0B8082", "#F9FAFB" ],
					"slug": "secondary-and-neutral",
					"name": "Secondary and Neutral"
				},
				{
					"colors": [ "#F9FAFB", "#0B8082" ],
					"slug": "neutral-and-secondary",
					"name": "Neutral and Secondary"
				},
				{
					"colors": [ "#926D01", "#F9FAFB" ],
					"slug": "tertiary-and-neutral",
					"name": "Tertiary and Neutral"
				},
				{
					"colors": [ "#F9FAFB", "#926D01" ],
					"slug": "neutral-and-tertiary",
					"name": "Neutral and Tertiary"
				}
			],
            "palette":  [
				{
					"slug": "primary",
					"color": "#0F172A",
					"name": "Primary"
				},
				{
					"slug": "primary-light",
					"color": "#475569",
					"name": "Primary (Light)"
				},
				{
					"slug": "primary-lighter",
					"color": "#CBD5E1",
					"name": "Primary (Lighter)"
				},
				{
					"slug": "secondary",
					"color": "#0B8082",
					"name": "Secondary"
				},
				{
					"slug": "secondary-light",
					"color": "#05a9b2",
					"name": "Secondary (Light)"
				},
				{
					"slug": "secondary-lighter",
					"color": "#E0F7F7",
					"name": "Secondary (Lighter)"
				},
				{
					"slug": "tertiary",
					"color": "#926D01",
					"name": "Tertiary"
				},
				{
					"slug": "tertiary-light",
					"color": "#CDAF4B",
					"name": "Tertiary (Light)"
				},
				{
					"slug": "tertiary-lighter",
					"color": "#F5ECCF",
					"name": "Tertiary (Lighter)"
				},
				{
					"slug": "accent",
					"color": "#FF7700",
					"name": "Accent"
				},
				{
					"slug": "info",
					"color": "#027AB6",
					"name": "Info"
				},
				{
					"slug": "warning",
					"color": "#B91C1C",
					"name": "Warning"
				},
				{
					"slug": "neutral",
					"color": "#F9FAFB",
					"name": "Neutral"
				},
				{
					"slug": "neutral-100",
					"color": "#E5E7EB",
					"name": "Neutral (100)"
				},
				{
					"slug": "neutral-300",
					"color": "#D1D5DB",
					"name": "Neutral (300)"
				},
				{
					"slug": "neutral-500",
					"color": "#6B7280",
					"name": "Neutral (500)"
				},
				{
					"slug": "neutral-700",
					"color": "#374151",
					"name": "Neutral (700)"
				},
				{
					"slug": "neutral-900",
					"color": "#111827",
					"name": "Neutral (900)"
				},
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "Black"
				}
			]
		},
		"custom": {
			"spacing": {
				"gap": "1.5rem",
				"outer": "1.5rem"
			},
			"typography": {
				"line-height": {
					"tiny": 1.15,
					"small": 1.2,
					"medium": 1.5,
					"normal": 1.6
				}
			},
            "border-radius": {
                "default": "4px",
				"round": "9999px"
            },
			"box-shadow": {
				"default": "0 10px 20px rgba(0, 0, 0, 0.05)",
				"minimal": "rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;"
			}
		},
		"spacing": {
			"units": [ "%", "px", "rem" ]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Source Sans\",sans-serif",
					"name": "Source Sans",
					"slug": "primary",
					"fontFace": [
						{
							"fontFamily": "Source Sans",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-sans/SourceSans3VF-Roman.ttf.woff2" ]
						},
						{
							"fontFamily": "Source Sans",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-sans/SourceSans3VF-Italic.ttf.woff2" ]
						}
					]
				},
				{
					"fontFamily": "\"Source Serif\",serif",
					"name": "Source Serif",
					"slug": "secondary",
					"fontFace": [
						{
							"fontFamily": "Source Serif",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-serif/SourceSerif4Variable-Roman.ttf.woff2" ]
						},
						{
							"fontFamily": "Source Serif",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-serif/SourceSerif4Variable-Italic.ttf.woff2" ]
						}
					]
				},
                {
                    "fontFamily": "Menlo,Consolas,monaco,monospace",
                    "name": "Monospace",
                    "slug": "monospace"
                }
			],
			"fontSizes": [
                {
					"fluid": {
						"min": ".6rem",
						"max": ".875"
					},
                    "name": "Tiny",
                    "size": ".875rem",
                    "slug": "tiny"
                },
				{
					"fluid": {
						"min": ".85rem",
						"max": "1rem"
					},
					"name": "Small",
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "1.1rem",
						"max": "1.25rem"
					},
					"name": "Medium",
					"size": "1.25rem",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "2rem",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "clamp(1.75rem, 3vw, 2.5rem)",
					"slug": "x-large"
				},
				{
					"name": "Huge",
					"size": "clamp(2.5rem, 4vw, 3.25rem)",
					"slug": "xx-large"
				}
			]
		},
		"layout": {
			"contentSize": "720px",
			"wideSize": "1200px"
		}
	},
	"styles": {
		"blocks": {
			"core/archives": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontSize": "var:preset|font-size|tiny",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"textTransform": "uppercase"
				},
				"elements": {
					"link": {
						"typography": {
							"fontFamily": "var:preset|font-family|primary",
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var:preset|color|primary"
							},
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/buttons": {
				"spacing": {
					"blockGap": "1rem"
				}
			},
			"core/categories": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontSize": "var:preset|font-size|tiny",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"textTransform": "uppercase"
				},
				"elements": {
					"link": {
						"typography": {
							"fontFamily": "var:preset|font-family|primary",
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var:preset|color|primary"
							},
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
            "core/code": {
                "border": {
                	"radius": "var:custom|border-radius|default",
					"width": "0px"
                },
                "color": {
                	"background": "var:preset|color|neutral-100",
					"text": "var:preset|color|primary"
                },
                "spacing": {
					"padding": {
						"top": "var:custom|spacing|gap",
						"right": "var:custom|spacing|gap",
						"bottom": "var:custom|spacing|gap",
						"left": "var:custom|spacing|gap"
					}
				},
                "typography": {
                    "fontFamily": "var:preset|font-family|monospace",
                    "fontSize": "var:preset|font-size|small"
                }
            },
            "core/image": {
                "border": {
                    "radius": "var:custom|border-radius|default"
                },
				"elements": {
					"caption": {
						"spacing": {
							"margin": {
								"top": ".875rem"
							}
						}
					}
				}
            },
			"core/list": {
				"typography": {
					"fontFamily": "var:preset|font-family|secondary"
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"fontFamily": "var:preset|font-family|primary",
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
            "core/query-title": {
                "typography": {
                    "fontWeight": "300",
                    "lineHeight": "var:custom|typography|line-height|small"
                }
            },
			"core/page-list": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary"
				}
			},
            "core/paragraph": {
                "typography": {
                    "fontFamily": "var:preset|font-family|secondary"
                }
            },
			"core/post-comments": {
				"spacing": {
					"padding": {
						"top": "var:custom|spacing|small"
					}
				}
			},
			"core/post-excerpt": {
				"elements": {
					"link": {
						"typography": {
							"fontFamily": "var:preset|font-family|primary"
						}
					}
				}
			},
			"core/post-template": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary"
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "currentColor"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var:preset|color|secondary"
							}
						}
					}
				}
			},
			"core/post-featured-image": {
				"border": {
					"radius": "0"
				}
			},
			"core/pullquote": {
				"border": {
					"radius": "var:custom|border-radius|default",
					"width": "0px"
				},
				"color": {
					"background": "var:preset|color|neutral-100"
				},
				"typography": {
					"fontSize": "var:preset|font-size|large"
				}
			},
            "core/separator": {
                "border": {
                    "width": "0 0 1px 0"
                }
            },
			"core/site-title": {
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"textTransform": "uppercase"
				}
			},
			"core/tag-cloud": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"textTransform": "uppercase"
				}
			}
		},
		"color": {
			"background": "var:preset|color|neutral",
			"text": "var:preset|color|primary"
		},
		"elements": {
			"button": {
				"border": {
					"color": "transparent",
					"radius": "var:custom|border-radius|default",
					"style": "solid",
                    "width": "1px"
				},
				"color": {
					"background": "var:preset|color|primary",
					"text": "var:preset|color|neutral"
				},
				"spacing": {
					"padding": {
						"top": "0.8em",
						"right": "1.2em",
						"bottom": "0.8em",
						"left": "1.2em"
					}
				},
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontSize": "var:preset|font-size|small",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"lineHeight": "var:custom|typography|line-height|tiny",
					"textTransform": "uppercase"
				}
			},
			"caption": {
				"color": {
					"text": "var:preset|color|primary-light"
				},
				"spacing": {
					"margin": {
						"bottom": "0rem !important"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|small"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "600",
					"lineHeight": "var:custom|typography|line-height|tiny"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var:preset|font-size|xx-large"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var:preset|font-size|x-large"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var:preset|font-size|large",
					"lineHeight": "var:custom|typography|line-height|small"
				}
			},
			"h4": {
				"color": {
					"text": "var:preset|color|tertiary"
				},
				"typography": {
					"fontSize": "calc(0.8 * var( --wp--preset--font-size--large))",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"lineHeight": "var:custom|typography|line-height|small",
					"textTransform": "uppercase"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "500",
					"letterSpacing": "0.5px",
					"lineHeight": "var:custom|typography|line-height|normal",
					"textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var:preset|font-size|medium",
					"lineHeight": "var:custom|typography|line-height|normal"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|secondary"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "currentColor"
					}
				},
				":focus": {
					"color": {
						"text": "currentColor"
					}
				}
			}
		},
		"spacing": {
			"blockGap": "var(--wp--custom--spacing--gap)",
			"padding": {
				"right": "var:custom|spacing|gap",
				"left": "var:custom|spacing|gap"
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|primary",
			"lineHeight": "var:custom|typography|line-height|normal",
			"fontSize": "var:preset|font-size|medium"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
